# ---------- QPH engine ----------
REDIS_URL=redis://redis:6379/0
QPH_IDLE=15m
QPH_WORKER_SLEEP=5
QPH_BOOT_TICK_ALL=false
QPH_FEEDBACK_AUTOLINK=true
QPH_ATTACH_THRESHOLD=0.80
AUTO_ATTACH=true
AUTO_ATTACH_THRESHOLD=0.80

# ---------- Webhook auth (HMAC) ----------
OPENAI_WEBHOOK_SECRET=change-me

# ---------- Rekor (Sigstore) ----------
REKOR_SERVER=https://rekor.sigstore.dev
# Set these for real anchoring (or leave unset and use REKOR_SIMULATE=true)
# REKOR_PUBKEY_PATH=/app/keys/pubkey.pem
# REKOR_SIG_PATH=/app/keys/blob.sig
REKOR_SIMULATE=true

# ---------- Frontend map (optional, for /public/drive.html) ----------
MAPBOX_TOKEN=YOUR_MAPBOX_TOKEN
